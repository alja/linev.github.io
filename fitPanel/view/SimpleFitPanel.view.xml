<mvc:View
 	class="sapUiSizeCompact"
	height="100%"
	width="450px"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	controllerName="localapp.controller.SimpleFitPanel">
	<Page id="simplefitpanel_page" title="Simple Fit Panel" showHeader="true">
	<VBox class="sapUiSizeCompact">
		<!-- What kind of form? -->
			<form:Form id="MainForm"
				editable="true"
				ariaLabelledBy="Title1">
				<form:layout>
					<form:ResponsiveGridLayout
						labelSpanXL="4"
						labelSpanL="3"
						labelSpanM="4"
						labelSpanS="4"
						adjustLabelSpan="false"
						emptySpanXL="2"
						emptySpanL="0"
						emptySpanM="0"
						emptySpanS="0"
						columnsXL="2"
						columnsL="1"
						columnsM="1"
						columnsS="3"
						singleContainerFullSize="false" />
				</form:layout>
				<form:formContainers id="CompleteForm">
					<!-- ComboBox for Data Set -->
					<form:FormContainer ariaLabelledBy="dataset" id="TestForm">						
						<form:FormElement>
							<Label text="Data Set:" labelFor="DataSet">
								<layoutData>
									<l:GridData span="XL1 L4 M3 S3" />
								</layoutData>
							</Label>
							<form:fields >
								<ComboBox id="DataSet" selectedKey="{/fSelectDataId}" items="{ path: '/fDataSet', sorter: { path: 'fSet' } }">
		               				<core:Item key="{fId}" text="{fSet}" />
		               				<layoutData>
										<l:GridData span="XL1 L4 M3 S7" />
									</layoutData>
		        				</ComboBox>	
							</form:fields>
							<!-- Fit Function Title -->
							<Title level="H3" text="Fit Function">
								<layoutData>
									<l:GridData span="XL1 L4 M3 S12" />
								</layoutData>
							</Title>
							<!-- ComboBox for Type -->
							<form:fields>
								<Label text="Type:" labelFor="TypeFunc">
									<layoutData>
										<l:GridData span="XL1 L4 M3 S2" />
									</layoutData>
								</Label>
								<ComboBox id="TypeFunc" selectedKey="{/fSelectTypeId}" items="{ path: '/fTypeFunc', sorter: { path: 'fFunc' } }" change="selectTypeFunc">
		               				<core:Item key="{fId}" text="{fSet}" />
		               				<layoutData>
										<l:GridData span="XL1 L4 M3 S4" />
									</layoutData>
						        </ComboBox>    
						    </form:fields>
						   	<form:fields>
						        <ComboBox id="TypeXY" selectedKey="{/fSelectXYId}" items="{ path: '/fTypeXY', sorter: { path: 'fXY' } }" change="onTypeXYChange">
					               <core:Item key="{fId}" text="{fSet}" />
						             <layoutData>
										<l:GridData span="XL2 L1 M2 S4" />
									</layoutData> 
						        </ComboBox>      
							</form:fields>
						</form:FormElement>
					</form:FormContainer>
					<!-- Title for Operation -->
					<form:FormContainer ariaLabelledBy="Operation">
						<form:toolbar>
							<Toolbar>
								<Title id="operation" text="Operation" level="H4" titleStyle="H4"/>
								<ToolbarSpacer />
							</Toolbar>
						</form:toolbar>
						<!-- RadioButtons for Operation -->
						<form:FormElement>
							<form:fields>
								<RadioButtonGroup id = "RBOperation" columns="4" width="100%" selectedIndex="{/fOperation}" enabled="{= ${/fSelectTypeId} === '0' &amp;&amp; ${/fSelectDataId} !== '1'}">
									<buttons>
										<RadioButton id="RB1-1" text="Nop"/>
										<RadioButton id="RB1-2" text="Add"/>
										<RadioButton id="RB1-3" text="NormAdd"/>
										<RadioButton id="RB1-4" text="Conv"/>
									</buttons>
									<layoutData>
										<l:GridData span="XL2 L1 M2 S12" />
									</layoutData> 
								</RadioButtonGroup>
								<!-- Text Area for selected Type of Function -->
								<TextArea id="OperationText" height="30px" value=" " valueLiveUpdate="{/fOpTextUpdate}">
									<layoutData>
										<l:GridData span="XL2 L1 M2 S12" />
									</layoutData>
								</TextArea>
								<!-- Label and Text for Selected Function --> 
								<Label text="Selected " labelFor="OperationText">
									<layoutData>
										<l:GridData span="XL2 L1 M2 S12" />
									</layoutData> 
								</Label>
								<Text id="selectedOpText" text=" "/>
								<Button id="parametersButton" text="Set Parameters..." enabled="{= ${/fSelectDataId} !== '1'}" press="setParametersDialog"/>	
							</form:fields>
						</form:FormElement>
					</form:FormContainer>
					<!-- Tabs -->
					<form:FormContainer>
						<form:FormElement>
							<form:fields>
								<IconTabBar id="Gen-Min">
							    <!-- General Item (Compact)-->
							    	<items>
							    		<IconTabFilter text="General">
											<!-- ComboBox for Method -->
											<Table id="Method">   
												<columns>
											    	<Column><Title level="H4" text="Method" /></Column>
											    	<Column></Column>
											    	<Column></Column>
											  	</columns>  
											  	<items>
											    	<ColumnListItem>
											    		<cells>
											    			<ComboBox id="MethodCombo" selectedKey="{/fSelectMethodId}" items="{ path: '/fMethod', sorter: { path: 'fMethod' } }">
											       				<core:Item key="{fId}" text="{fSet}" />
															</ComboBox>
											    		</cells>
											    	</ColumnListItem>
											    	<ColumnListItem>
											    		<cells>
															<CheckBox id="linearFit" text="Linear Fit" selected="{/fLinear}" />
															<CheckBox id="robust" text="Robust" enabled="{= ${/fLinear} === true}" selected="{/fRobust}"/>
															<StepInput
																id="RobustStep"
																value="0.95"
																min="0.01"
																max="1"
																step="0.01"
																width="95px"
																displayValuePrecision = "2"
																enabled="{= ${/fRobust} === true}"/>
											    		</cells>
											    	</ColumnListItem>
											    </items>
											</Table>
											<!-- Check Boxes for Fit Options -->
											<Table id="Fit_Options">   
											  <columns>
											    <Column><Title level="H4" text="Fit Options"/></Column>
											    <Column></Column>  
											  </columns>  
											  <items>
											    <ColumnListItem>
											      <cells>
													<CheckBox id="Integral" text="Integral" selected="{/fIntegral}"/>
														<CheckBox text="Use range" selected="{/fUseRange}"/>	
													</cells>
											    </ColumnListItem>
											    <ColumnListItem>
											    	<cells>
											    		<CheckBox text="Best Errors" enabled="{= ${/fLinear} !== true}" selected="{/fBestErrors}"/>	
														<CheckBox text="Improve fit results" enabled="{= ${/fLinear} !== true}" selected="{/fImproveFit}"/>	
													</cells>
												</ColumnListItem>
												<ColumnListItem>
											    	<cells>
											    		<CheckBox text="All weights = 1" selected="{/fWeights}" enabled="{= ${/fBins} === false}" />
											    		<CheckBox text="Add to list" selected="{/fAddList}"/>	
													</cells>
												</ColumnListItem>
												<ColumnListItem>
													<cells>
														<CheckBox text="Empty bins, weights=1" selected="{/fBins}" enabled = "{= ${/fWeights} === false}"/>
														<CheckBox text="Use gradient" selected="{/fUseGradient}"/>
													</cells>
												</ColumnListItem>
											  </items>  
											</Table>
											<!-- Check Boxes for Draw Options -->
						    				<Table id="Draw">   
												<columns>
											    	<Column><Title level="H4" text="Draw Options"/></Column>
											  	</columns>  
											  	<items>
											    	<ColumnListItem>
											    		<cells>
															<CheckBox text="SAME" selected="{/fSame}"/>
											    		</cells>
											    	</ColumnListItem>
											    	<ColumnListItem>
											    		<cells>
															<CheckBox text="No Drawing" selected ="{/fNoDrawing}"/>
											    		</cells>
											    	</ColumnListItem>
											    	<ColumnListItem>
											    		<cells>
											    			<CheckBox id = "noStore" text="Do not store/draw" selected="{/fNoStore}" select="storeChange"/>
											    		</cells>
											    	</ColumnListItem>
											  </items>  
											</Table>
											<!-- Range Slider -->
											<l:VerticalLayout width="100%" >
						    					<RangeSlider id="Slider" showAdvancedTooltip="true" range="{/fRange}" min="{/fMinRange}" max="{/fMaxRange}" step="{/fStep}" width="80%" showHandleTooltip="false" inputAsTooltips="true" />
						    				</l:VerticalLayout>
							    		</IconTabFilter>
							    		<IconTabFilter text="Minimization">
							    		<!-- Minimization Item -->
							    			<l:VerticalLayout id="libraryContainer" class="sapUiSizeCompact">
							    				<!-- Title for Library -->
												<l:BlockLayoutCell title="Library">
													<!-- RadioButtons for Library -->
													<RadioButtonGroup id="LibraryRB" columns="3" width="100%"  selectedIndex="{/fLibrary}" select="selectRB">
														<buttons>
															<RadioButton id="RB2-1" text="Minuit"/>
															<RadioButton id="RB2-2" text="Minuit2"/>
															<RadioButton id="RB2-3" text="Fumili"/>
															<RadioButton id="RB2-4" text="GSL" enabled="false"/>
															<RadioButton id="RB2-5" text="Genetics"/>
														</buttons>
													</RadioButtonGroup>	
												</l:BlockLayoutCell>
												<!-- Title and ComboBox for Method -->
												<l:BlockLayoutCell title="Method" class="sapUiSizeCompact">
													<ComboBox id="MethodMin" selectedKey="{/fSelectMethodMinId}" items="{ path: '/fMethodMin', sorter: { path: 'fMethodMin' } }">
								               			<core:Item key="{fId}" text="{fSet}" />
								        			</ComboBox>
												</l:BlockLayoutCell>
												<!-- Title for Settings -->
												<l:BlockLayoutCell title="Settings">
													<Text text="Use ENTER key to validate a new value or click on Reset button to set the defaults."/>
												</l:BlockLayoutCell>
												<!-- Labels and TextAreas for Settings -->
												<form:SimpleForm 
													layout="ResponsiveGridLayout"
													editable="true"
													adjustLabelSpan="true"
													labelSpanXL="4"
													labelSpanL="3"
													labelSpanM="3"
													labelSpanS="8"
													emptySpanXL="0"
													emptySpanL="0"
													emptySpanM="0"
													emptySpanS="0"
													columnsXL="2"
													columnsL="1"
													columnsM="1"
													columnsS="1">
													<Label text="Error Definition (default = 1)" labelFor="testError"/>
													<Input
														id="testError"
														type="Text"
														placeholder="1.00">
													</Input>
													<Label text="Max tolerance (precision)" labelFor="maxTolerance"/>
													<Input
														id="maxTolerance"
														type="Text"
														placeholder="0.01">
													</Input>
													<Label text="Max number of interations" labelFor="maxInterations"/>
													<Input
														id="maxInterations"
														type="Text"
														placeholder="0">
													</Input>
											    </form:SimpleForm>
											    <!-- Title and RadioButtons for Print Options -->
												<l:BlockLayoutCell title="Print Options">
													<RadioButtonGroup id="Print" columns="3" width="100%"  selectedIndex="{/fPrint}">
														<buttons>
															<RadioButton id="Print-1" text="Default"/>
															<RadioButton id="Print-2" text="Verbose"/>
															<RadioButton id="Print-3" text="Quiet"/>
														</buttons>
													</RadioButtonGroup>		
												</l:BlockLayoutCell>						
							    			</l:VerticalLayout>
							    		</IconTabFilter>
							    	</items>
							    </IconTabBar>
			    			</form:fields>
		    			</form:FormElement>
		    		</form:FormContainer>		
				</form:formContainers>
			</form:Form>
		</VBox>
		<!-- Buttons in Footer -->
	    <Toolbar>
	    	<Button text="Update" />
	    	<Button text="Fit" press="doFit"/>
	    	<Button text="Reset" press="resetPanel"/>
	    	<Button text="Close" press="closePanel"/>
	    </Toolbar>
	</Page>
</mvc:View>
